{
  "name": "bna",
  "version": "1.0.0",
  "description": "A monorepo for managing all FE infrastructure projects",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "watch": "lerna run watch --parallel",
    "bootstrap": "yarn install && lerna link",
    "build": "lerna run build --stream",
    "version": "HUSKY_SKIP_HOOKS=1 lerna version"
  },
  "prettier": {
    "parser": "typescript",
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "tabWidth": 2
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "husky": "4.3.8",
    "lerna": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@bna/commitlint-config/lerna"
    ]
  }
}
